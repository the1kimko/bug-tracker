{
  "name": "mern-bug-tracker",
  "version": "1.0.0",
  "description": "MERN Bug Tracker with Testing & Debugging",
  "private": true,
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ../server && npm install && cd ..",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='(unit|utils)' --coverage",
    "test:integration": "jest --testPathPattern='integration' --coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "lint": "eslint ."
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0"
  }
}
